<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <img class="card-img-top cover-image" src="https://s3.eu-central-1.amazonaws.com/bootstrapbaymisc/blog/24_days_bootstrap/oslo.jpg" alt="Bologna">
                <div class="card-body text-center">
                    <%= gravatar_for(@user)%>
                        <h4 class="card-title">
                            <%=@user.username%>
                        </h4>
                        <h6 class="card-subtitle mb-2 text-muted">Famous Actor</h6>
                        <p class="card-text">Robert John Downey Jr.'career has included critical and popular success in his youth, followed by a period of substance abuse and legal difficulties, and a resurgence of commercial success in middle age. </p>
                        <a href="#" class="btn btn-info">Follow</a>
                        <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-outline-info" %>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="card text-center mt-5">
        <div class="card-header">
            <h1>Articles</h1>
        </div>
    </div>
</div>
<div class="mb-5">
    <% @user.articles.each do |article| %>
        <div class="container">
            <div class="card text-center mt-5">
                <div class="card-header">
                    <h1>
                        <%= article.title %> by:
                            <%= article.user.username if article.user%>
                    </h1>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Description</h5>
                    <p class="card-text">
                        <%= article.description %>
                    </p>
                    <%# <a href="#" class="btn btn-primary">Go somewhere</a> %>
                </div>
                <div class="card-footer text-muted">
                    <div class="row">
                        <div class="col-4">
                            <%= link_to 'Show', article, class: "btn btn-primary btn-block" %>
                        </div>
                        <div class="col-4">
                            <%= link_to 'Edit', edit_article_path(article), class: "btn btn-info btn-block" %>
                        </div>
                        <div class="col-4">
                            <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-block" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
</div>