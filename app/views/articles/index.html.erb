<div class="container jumbotron mt-5 jumbo">
  <div class="row justify-content-center">
    <h1>
      Articales
    </h1>
  </div>
  <div class="row justify-content-center">
    <p>Some Articles to read in your free time.</p>
  </div>
</div>
<% @articles.each do |article| %>
  <div class="container">
    <div class="card text-center mt-5">
      <div class="card-header">
        <h1><%= article.title %> by: <%= article.user.username if article.user%></h1>
      </div>
      <div class="card-body">
        <h5 class="card-title">Description</h5>
        <p class="card-text"><%= article.description %></p>
        <%# <a href="#" class="btn btn-primary">Go somewhere</a> %>
      </div>
      <div class="card-footer text-muted">
        <div class="row">
          <div class="col-4">
            <%= link_to 'Show', article, class: "btn btn-primary btn-block" %>
          </div>
          <div class="col-4">
            <%= link_to 'Edit', edit_article_path(article), class: "btn btn-info btn-block" %>
          </div>
          <div class="col-4">
            <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-block" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

