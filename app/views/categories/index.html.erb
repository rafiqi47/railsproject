<div class="container jumbotron mt-5 jumbo">
  <div class="row justify-content-center">
    <h1>
      Categories
    </h1>
  </div>
  <div class="row justify-content-center">
    <p>Some Categories for the Articles</p>
  </div>
</div>
<% @categories.each do |category| %>
  <div class="container">
    <div class="card text-center mt-5">
      <div class="card-header">
        <h1><%= category.name %>
      </div>
      
      <div class="card-footer text-muted">
        <div class="row">
          <div class="col-6">
            <%= link_to 'Edit', edit_category_path(category), class: "btn btn-info btn-block" %>
          </div>
          <div class="col-6">
            <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-block" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
